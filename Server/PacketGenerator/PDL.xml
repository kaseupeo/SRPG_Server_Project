<?xml version="1.0" encoding="utf-8"?>
<!-- C_ => 클라이언트에서 서버로 보내는 패킷 -->
<!-- S_ => 서버에서 클라이언트로 보내는 패킷 -->
<PDL>
    <packet name="S_BroadcastEnterGame">
        <int name="playerID"/>
        <float name="X"/>
        <float name="Y"/>
        <float name="Z"/>
    </packet>
    <packet name="C_LeaveGame">
    </packet>
    <packet name="S_BroadcastLeaveGame">
        <int name="playerID"/>
    </packet>
    <packet name="S_PlayerList">
        <list name="player">
            <bool name="isSelf"/>
            <int name="playerID"/>
            <float name="X"/>
            <float name="Y"/>
            <float name="Z"/>
        </list>
    </packet>
        
    <!-- TODO : 턴 관리 패킷 -->
    
    
<!--
    패킷 이동 순서 
    턴 시작 -> 플레이어 행동 및 좌표 
        -> 이동 행동일 때 -> 이동 범위 리스트 -> 플레이어 행동 및 좌표 -> 이동 경로 리스트
        -> 공격 행동일 때 -> 공격 범위 리스트 -> 플레이어 행동 및 좌표 -> 공격
        
-->
    
    <!-- 플레이어 행동 및 좌표 -->
    <!-- 이동, 공격 등 -->
    <packet name="C_PlayerAction">
        <int name="action"/>
        <float name="X"/>
        <float name="Y"/>
        <float name="Z"/>
    </packet>
    <!-- 이동 범위 리스트 -->
    <packet name="S_MoveRange">
        <int name="playerID"/>
        <list name="position">
            <float name="X"/>
            <float name="Y"/>
            <float name="Z"/>
        </list>
    </packet>
    <!-- 이동 경로 리스트 -->
    <packet name="S_Move">
        <int name="playerID"/>
        <list name="path">
            <float name="X"/>
            <float name="Y"/>
            <float name="Z"/>
        </list>
    </packet>

    <!-- 공격 범위 리스트 -->
    <packet name="S_AttackRange">
        <int name="playerID"/>
        <list name="position">
            <float name="X"/>
            <float name="Y"/>
            <float name="Z"/>
        </list>
    </packet>
    <!-- 공격 -->
    <packet name="S_Attack">
        <int name="playerID"/>
        <float name="X"/>
        <float name="Y"/>
        <float name="Z"/>
    </packet>
</PDL>